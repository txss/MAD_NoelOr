<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans     
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.3.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

	<bean name="/accueil.htm" class="fr.univ.noel.web.controlers.AccueilController" />


	<!-- Utiliser les annotations liées au module MVC de Spring -->
	<mvc:annotation-driven enable-matrix-variables="true" />

	<!-- Définiton des scans -->
	<context:component-scan base-package="fr.univ.noel.web.controlers" />
	<context:component-scan base-package="fr.univ.noel.managers" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/WEB-INF/jsp/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>


</beans>